<%- include("cabeceras/plantillas.ejs",{tituloWeb:'Editar mis Datos'}) %>
<body>
    <a onclick="eliminarPerfil('<%= result.id_usuarios %>')" class="btn btn-danger pull-right">Eliminar Perfil</a>
    <h3 class="p-3 text-center"><span id="idUsuario"><%= result.id_usuarios%> - </span> <%= result.nombres %> </h3>
    
    <form action="/registro" class="formPerfil" method="post" id="formPerfil" enctype="multipart/form-data"> <!-- novalidate> -->
    <hr>
    <div class="container bootstrap snippet">
        <div class="row">
            <!-- barra lateral izquiera -->
            <div class="col-sm-3">
                <div class="text-center">
                    <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    <h6>Seleccione foto de perfil</h6>
                    <input type="file" id="imagen_user" value="<%= result.imagen %>" class="text-center center-block file-upload">
                </div></hr><br>

                <div class="panel panel-default">
                <div class="panel-heading"><i class='bx bxl-linkedin-square'></i> Linkedin </div>
                    <div class="form-group">                 
                        <input required type="text" class="form-control" value="<%= result.linkedin%>" id="linkedin_user" placeholder="Tu perfil en Linkedin">
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading"> Idiomas </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="idiomas_user" placeholder="Algun idioma Extra">
                        <!-- <button type="submit" class="btn btn-primary btn-sm " ><i class='bx bxs-plus-circle bx-sm'></i> Otro</button> -->
                    </div>
                </div>
                
            </div>

            <!-- formulario para llenar perfil -->
            <div class="col-sm-9">
                <div > 
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="nombres_user"><h4>Nombres</h4></label>
                            <input required type="text" class="form-control" value="<%= result.nombres %>" id="nombres_user" placeholder="Nombres" >
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="apellidos_user"><h4>Apellidos</h4></label>
                            <input required type="text" class="form-control" value="<%= result.apellidos %>" id="apellidos_user" placeholder="Apellidos" >
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="usuario_user"><h4>Usuario</h4></label>
                            <input required type="text" class="form-control" value="<%= result.usuario %>" id="usuario_user" placeholder="Usuario" >
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="email_user"><h4>Correo</h4></label>
                            <input required type="text" class="form-control" value="<%= result.email %>" id="email_user" placeholder="Correo" >
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="pass_user"><h4>Contraseña</h4></label>
                            <input required type="password" class="form-control" value="<%= result.pass %>" id="pass_user" placeholder="Contraseña" >
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="pais_user"><h4>Pais</h4></label>
                            <input required type="text" class="form-control" value="<%= result.pais %>" id="pais_user" placeholder="Pais de residencia">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="ciudad_user"><h4>Ciudad</h4></label>
                            <input required type="text" class="form-control" value="<%= result.ciudad %>" id="ciudad_user" placeholder="Ciudad de residencia" >
                        </div>
                    </div>            

                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="edad_user"><h4>Edad</h4></label>
                            <input required type="number" class="form-control" value="<%= result.edad %>" id="edad_user" placeholder="Numero de años">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6">
                            <label for="estudios_user"><h4>Estudios</h4></label>
                            <input required type="text" class="form-control" value="<%= result.estudios %>" id="estudios_user" placeholder="Universidad o ultimo grado de estudios" >
                        </div>
                    </div>

                    <div class="form-group"> 
                        <div class="col-xs-6">
                            <label for="cv_user"><h4>Hoja de vida</h4></label>
                            <input required type="file" class="form-control" value="<%= result.cv %>" id="cv_user" placeholder="cv">
                        </div>
                    </div>

                    <div class="form-group">  
                        <div class="col-xs-6">
                            <label for="hobies_user"><h4>Hobies</h4></label>
                            <input required type="text" class="form-control" value="<%= result.hobies %>" id="hobies_user" placeholder="Escribe algun hobie" >
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                                <br>
                                <button type="submit" class="btn btn-lg btn-success pull-right"><i class="glyphicon glyphicon-ok-sign"></i> Guardar</button>
                                <a href="/miPerfil/<%=result.id_usuarios%>" class="btn btn-lg btn-warning pull-right">Cancelar</a>
                            </div>
                    </div>
                </div>
            </div><!-- div formulario para llenar perfil -->
            
        </div><!--/row-->
    </div>
    </form>

    <script src="../js/editaRegistro.js"></script>
    <script src="../js/verImagen.js"></script>
  
</body>
</html>