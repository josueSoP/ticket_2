<%- include("../cabeceras/cabecera.ejs",{tituloWeb:'Editar Registro'}) %>

<body>

  <h1 class="p-3 text-center">Modificacion de usuario</h1>

  <div class="container mt-4">
    <div class="p-2"></div>
    <div class="card border-secondary">
      <div class="card-header"><span id="idUsuario"><%= result.id %></span> <%= result.nombres %> </div>
      <div class="card-body">

          <!-- referencia a ruta guardar creacion de usuario se hace un POST-->
        <form id="nuevoForm" method="POST" class="row g-3 needs-validation">
          
          <div class="col-md-4 position-relative">
            <label for="nombres" class="form-label">Nombres</label>
            <input type="text" class="form-control is-valid" value="<%= result.nombres %>" id="nombres" name="nombres" tabindex="1" required>
            <div class="invalid-tooltip">Ingresa tus nombres </div>
          </div>

          <div class="col-md-4 position-relative">
            <label for="usuario_apellidos" class="form-label">Apellidos</label>
            <input type="text" class="form-control is-valid" value="<%= result.apellidos %>"id="apellidos" name="usuario_apellidos" tabindex="2" required>
            <div class="invalid-tooltip">Ingresa tus apellidos </div>
          </div>

          <div class="col-md-4 position-relative">
            <label for="email" class="form-label">Email</label>
            <div class="input-group has-validation">
              <span class="input-group-text" id="arroba">@</span>
              <input type="email" class="form-control is-valid" value="<%= result.email %>" id="email" aria-describedby="validationTooltipUsernamePrepend" name="email" tabindex="3" required>
              <div class="invalid-tooltip">Elija un nombre de usuario unico y valido</div>
            </div>
          </div>

          <div class="col-md-4 position-relative">
            <label for="usuario" class="form-label">Usuario</label>
            <input type="text" class="form-control is-valid" value="<%= result.usuario %>" id="usuario" name="usuario" tabindex="4" required>
            <div class="invalid-tooltip">Ingresa un nombre de usuario </div>
          </div>
          
          <div class="col-md-4 position-relative">
            <label for="pass" class="form-label">Contrase√±a</label>
            <input type="password" class="form-control is-valid" value="<%= result.pass %>" id="pass" name="pass" tabindex="5" required />
          </div>

            <button type="submit" class="btn btn-primary col-md-6" >Guardar</button>
            <a href="/usuarios" class="btn btn-secondary col-md-6">Cancelar</a>
          </form>
        </div>
      </div>
    </div>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script src="../js/login/editaRegistro.js"></script>
</body>

</html>